% if ((${#TARGET_INC[*]})); then
%     LIST=$(cp_join "\n    " ${TARGET_INC[@]})
include_directories(
    %{ $LIST }%
)

% fi
% if ((${#TARGET_LINK[*]})); then
%     LIST=$(cp_join "\n    " ${TARGET_LINK[@]})
link_directories(
    %{ $LIST }%
)

% fi
%
% SLIST=$(cp_join "\n    " ${SOURCES[@]})
add_library(
    %{ $TARGET_BUILD_NAME }%
    MODULE
    %{ $SLIST }%
)

set_target_properties(
    %{ $TARGET_BUILD_NAME }%
    PROPERTIES
% if ((!${PRJ_OPTS["auto_export"]})); then
    COMPILE_FLAGS "-fvisibility=hidden"
% fi
% if ((${#CB_LIB_LFLAGS[*]})); then
    LINK_FLAGS "%{ ${CB_LIB_LFLAGS[@]} }%"
% fi
    RUNTIME_OUTPUT_DIRECTORY ../../bin
    LIBRARY_OUTPUT_DIRECTORY ../../lib/plugins
    RUNTIME_OUTPUT_DIRECTORY_DEBUG ../../bin
    LIBRARY_OUTPUT_DIRECTOR_DEBUG ../../lib/plugins
    RUNTIME_OUTPUT_DIRECTORY_RELEASE ../../bin
    LIBRARY_OUTPUT_DIRECTORY_RELEASE ../../lib/plugins
    OUTPUT_NAME %{ $TARGET }%
)
% if ((${#TARGET_LIBS[*]})); then
%     LIST=$(cp_join "\n    " ${TARGET_LIBS[@]})

target_link_libraries(
    %{ $TARGET_BUILD_NAME }%
    %{ $LIST }%
)
% fi
% if ((${#TARGET_DEPS[*]})); then
%     LIST=$(cp_join "\n    " ${TARGET_DEPS[@]})

add_dependencies(
    %{ $TARGET_BUILD_NAME }%
    %{ $LIST }%
)
% fi

install(
    TARGETS %{ $TARGET_BUILD_NAME }%
    LIBRARY DESTINATION lib/%{ $PKG_NAME }%/plugins
)
